@page "{restaurantId:int}"
@model DotnetCoreFundamentals.Pages.Restaurants.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Editing @Model.Restaurant.Name</h1>

<form method="post">
    <input type="hidden" asp-for="Restaurant.Id" />
    <div class="form-group">
        <label asp-for="Restaurant.Name" />
        <input asp-for="Restaurant.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Restaurant.Location" />
        <input asp-for="Restaurant.Location" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Restaurant.Cuisine" />
        <select class="form-control"
                asp-for="Restaurant.Cuisine"
                asp-items="Model.Cuisines">
        </select>
    </div>
    <button type="submit" class="btn btn-primary">
        Save
    </button>
</form>

